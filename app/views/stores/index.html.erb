<% if admin_signed_in? %>
<div class="row center-xs">
  <div class="col-xs-12 col-md-12">
    <h1>Lista de Lojas Não Ativas</h1>
    <div class="panel panel-default table-responsive">
      <table id="tabela" class="table table-striped table-bordered" cellspacing="0">
        <thead>
          <tr>
            <th>Nome Da Loja</th>
            <th>CNPJ</th>
            <th>Site</th>
            <th>Telefone</th>
            <th>Nome Do Responsável</th>
            <th>Instagram</th>
            <th>Facebook</th>
            <th>Compras confirmadas</th>
            <th>Compras canceladas</th>
            <th>Delivery?</th>
            <th>Reserva?</th>
            <% if admin_signed_in? %>
            <th>Ativar?</th>
            <% end %>
          </tr>
        </thead>

        <tbody>
          <% if @storesNotActive.count > 0 %>
            <% @storesNotActive.each do |store| %>
              <tr>
                <td align="left"><%= link_to store.name, store_path(store), class: "red" %></td>
                <td align="left"><%= store.cnpj %></td>
                <td align="left"><%= store.site %></td>
                <td align="left"><%= store.telephone %></td>
                <td align="left"><%= store.name_responsible %></td>
                <td align="left"><%= store.instagram %></td>
                <td align="left"><%= store.facebook %></td>
                <td align="left"><%= store.count_confirmed_purchases %></td>
                <td align="left"><%= store.count_canceled_purchases %></td>
                <td align="left"><%= store.delivery %></td>
                <td align="left"><%= store.reserve %></td>
                <% if admin_signed_in? %>
                <%= render "edit_column_active", id: store.id, active: store.active %>
                <% end %>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>
