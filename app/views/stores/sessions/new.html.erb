<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
    <div class="box text-left">
      <h2>Entrar Como Loja</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <% if devise_error_messages! != "" %>
        <div class="alert alert-danger" role="alert">
          <%= devise_error_messages! %>
        </div>
        <% end %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Senha", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.label :remember_me, "Lembrar meus dados" %>
            <%= f.check_box :remember_me, class:"form-control" %>
          </div>
        <% end -%>

        <div class="field">
          <%= f.submit "Entrar", class:"btn be-red white" %>
        </div>
      <% end %>

      <%= render "stores/shared/links" %>
    </div>
  </div>
</div>