<%= form_for(@store_product) do |f| %>
	<%= f.hidden_field :id, value: id %>

	<td align="left">
         
        <%  product_flavors = ProductFlavor.where("product_id = ?", id) %>
        <%= fields_for :flavors do |flavor| %>
            <% product_flavors.each do |pf|
            	sabor = Flavor.find(pf.flavor_id) %>
            	<%= flavor.check_box(:ids_flavors, { :multiple => true }, sabor.id) %>
              	<%= flavor.label :ids_flavors, sabor.desc %>
              	<p/>
            <% end %>
        <% end %>
        
    </td>

	<td align="left"><%= f.text_field :price, class:"form-control", required: true, type: "price", placeholder: "Valor (R$)" %></td>
	<td align="left"><%= f.submit :Adicionar, class:"btn be-red white" %></td>
<% end %>